{
	"parser": "babel-eslint",
	"extends": "airbnb",
	"plugins": [
		"import"
	],
	"settings": {
		"import/resolver": {
			"node": {
				"paths": [
					"src"
				]
			}
		}
	},
	"parserOptions": {},
	"rules": {
		"react/require-extension": "off",
		"curly": 2,
		"new-cap": 0,
		"semi": [
			2,
			"never"
		],
		"comma-dangle": [
			2,
			"never"
		],
		"no-console": 0,
		"space-before-function-paren": 0,
		"max-len": [
			2,
			{
				"code": 200,
				"tabWidth": 2,
				"ignoreUrls": true,
				"ignoreStrings": true
			}
		],
		"no-continue": 0,
		"consistent-return": 0,
		"no-else-return": 0,
		"array-bracket-spacing": 0,
		"import/extensions": 0,
		"import/no-unresolved": 1,
		"import/prefer-default-export": 0,
		"array-callback-return": 0,
		"no-underscore-dangle": 0,
		"class-methods-use-this": 0,
		"global-require": 0,
		"arrow-body-style": 0,
		"newline-per-chained-call": 0,
		"eol-last": 2,
		"arrow-parens": [
			"error",
			"as-needed",
			{
				"requireForBlockBody": true
			}
		],
		"no-const-assign": "error",
		"no-var": "error",
		"prefer-arrow-callback": [
			"error",
			{
				"allowNamedFunctions": false,
				"allowUnboundThis": true
			}
		],
		"prefer-const": [
			"error",
			{
				"destructuring": "any",
				"ignoreReadBeforeAssign": true
			}
		]
	}
}